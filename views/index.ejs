<!DOCTYPE html>
<html>
  <head>
    <title></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <style>
    	*{
    		margin: 0;
    		padding: 0;
    	}
    	a{
    		text-decoration: none;
				color: black;
    	}
		#head{
			height: 100px;
			width: 100%;
			background:lightblue;
		}
		.box{
			float:right;
			margin-right: 50px;
		}
		.bigbox{
			position: absolute;
			right:0;
			line-height: 100px;
			margin-right: 30px;
		}
    </style>
  </head>
  <body>
    <div id="head">
			<%= username %>
			<div class="bigbox">
				<div class="box">
						<a href="/comment">发表留言</a>
					</div>
				<% if(login) { %>
					<div class="box">
						<a href="/login/logout">退出</a>
					</div>
					<div class="box">
						<a href="/login/addAvatar">上传头像</a>
					</div>
				<% }else { %>
					<div class="box">
						<a href="/login">登录</a>
					</div>
					<div class="box">
						<a href="/register">注册</a>
					</div>
				<% } %>		
			</div>
    </div>
		<ul>
			<% for(var i = 0; i < result.length; i++) { %>
				<li><%= result[i].comment %></li>
			<% } %>
		</ul>

		<ul>
			<% for(var i = 1; i <= pageNum; i++) { %>
				<li><a href="/?page=<%= i %>"><%= i %></a></li>
			<% } %>
		</ul>
  </body>
</html>
